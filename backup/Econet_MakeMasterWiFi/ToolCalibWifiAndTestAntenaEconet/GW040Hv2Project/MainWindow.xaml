                                              CanUserResizeColumns="False" CanUserResizeRows="False" CanUserSortColumns="False" CanUserReorderColumns="False" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                                              GridLinesVisibility="None"
                                              HeadersVisibility="Column"
                                              BorderThickness="0,0,0,0"
                                              SelectionUnit="FullRow" SelectionMode="Extended"
                                              >

                                    <DataGrid.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                            <Setter Property="BorderBrush" Value="#FFB3B3B3"/>
                                            <Setter Property="FontSize" Value="15"/>
                                            <Setter Property="FontWeight" Value="Normal"/>
                                            <Setter Property="Height" Value="25"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGrid.CellStyle>

                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="Height" Value="40"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="BorderBrush" Value="#FFB3B3B3"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                            <Setter Property="Padding" Value="3,0,0,0"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Range" Width="*" Binding="{Binding rangeFreq}"/>
                                        <DataGridTextColumn Header="Anten" Width="*" Binding="{Binding Anten}"/>
                                        <DataGridTextColumn Header="WIFI" Width="1.3*" Binding="{Binding wifiStandard}"/>
                                        <DataGridTextColumn Header="RATE" Width="*" Binding="{Binding Rate}"/>
                                        <DataGridTextColumn Header="BW" Width="*" Binding="{Binding Bandwidth}"/>
                                        <DataGridTextColumn Header="CH" Width="*" Binding="{Binding Channel}"/>
                                        <DataGridTextColumn Header="PwLimit" Width="1.5*" Binding="{Binding powerStd}"/>
                                        <DataGridTextColumn Header="Power" Width="1.5*" Binding="{Binding averagePower}"/>
                                        <DataGridTextColumn Header="evmMAX" Width="1.5*" Binding="{Binding evmMAX}"/>
                                        <DataGridTextColumn Header="EVM" Width="1.5*" Binding="{Binding Evm}"/>
                                        <DataGridTextColumn Header="FreqErr" Width="*" Binding="{Binding centerFreqError}"/>
                                        <DataGridTextColumn Header="Result" Width="*" Binding="{Binding Result}"/>
                                    </DataGrid.Columns>

                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Result}" Value="FAIL">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>

                                </DataGrid>

                            </TabItem>
                            
                           
                            <!--LOG UART-->
                            <TabItem>
                                <TabItem.Style>
                                    <Style TargetType="TabItem" BasedOn="{StaticResource custom_tabitem}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=STATION}" Value="Sau đóng vỏ">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TabItem.Style>
                                
                                <TabItem.Header>
                                    <Grid Height="30">
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Text="LOG UART" FontWeight="SemiBold"/>
                                    </Grid>
                                </TabItem.Header>

                                <ScrollViewer x:Name="_scrollViewer2" >
                                    <RichTextBox  Background="#FFFFFF" BorderThickness="0" IsReadOnly="True" Block.LineHeight="1" Padding="0,5,0,0">
                                        <FlowDocument PageHeight="180">
                                            <Paragraph>
                                                <Run Foreground="Black" FontWeight="Normal" Text="{Binding Path=LOGUART, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                            </Paragraph>
                                        </FlowDocument>
                                    </RichTextBox>
                                </ScrollViewer>

                            </TabItem>


                            <!--LOG TELNET-->
                            <TabItem>
                                <TabItem.Style>
                                    <Style TargetType="TabItem" BasedOn="{StaticResource custom_tabitem}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=STATION}" Value="Sau đóng vỏ">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TabItem.Style>

                                <TabItem.Header>
                                    <Grid Height="30">
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Text="LOG TELNET" FontWeight="SemiBold"/>
                                    </Grid>
                                </TabItem.Header>

                                <ScrollViewer x:Name="_scrollViewer5" >
                                    <RichTextBox  Background="#FFFFFF" BorderThickness="0" IsReadOnly="True" Block.LineHeight="1" Padding="0,5,0,0">
                                        <FlowDocument PageHeight="180">
                                            <Paragraph>
                                                <Run Foreground="Black" FontWeight="Normal" Text="{Binding Path=LOGTELNET, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                            </Paragraph>
                                        </FlowDocument>
                                    </RichTextBox>
                                </ScrollViewer>

                            </TabItem>


                            <!--LOG INSTRUMENT-->
                            <TabItem Style="{StaticResource custom_tabitem}">
                                <TabItem.Header>
                                    <Grid Height="30">
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Text="LOG INSTRUMENT" FontWeight="SemiBold"/>
                                    </Grid>
                                </TabItem.Header>

                                <ScrollViewer x:Name="_scrollViewer3" >
                                    <RichTextBox  Background="#FFFFFF" BorderThickness="0" IsReadOnly="True" Block.LineHeight="1" Padding="0,5,0,0">
                                        <FlowDocument PageHeight="180">
                                            <Paragraph>
                                                <Run Foreground="Black" FontWeight="Normal" Text="{Binding Path=LOGINSTRUMENT, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                            </Paragraph>
                                        </FlowDocument>
                                    </RichTextBox>
                                </ScrollViewer>

                            </TabItem>

                            <!--LOG REGISTER-->
                            <TabItem>
                                <TabItem.Style>
                                    <Style TargetType="TabItem" BasedOn="{StaticResource custom_tabitem}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=STATION}" Value="Sau đóng vỏ">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TabItem.Style>
                                
                                <TabItem.Header>
                                    <Grid Height="30">
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Text="LOG REGISTER" FontWeight="SemiBold"/>
                                    </Grid>
                                </TabItem.Header>

                                <ScrollViewer x:Name="_scrollViewer4" >
                                    <RichTextBox  Background="#FFFFFF" BorderThickness="0" IsReadOnly="True" Block.LineHeight="1" Padding="0,5,0,0">
                                        <FlowDocument PageHeight="180">
                                            <Paragraph>
                                                <Run Foreground="Black" FontWeight="Normal" Text="{Binding Path=LOGREGISTER, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                            </Paragraph>
                                        </FlowDocument>
                                    </RichTextBox>
                                </ScrollViewer>

                            </TabItem>

                            
                            <!--ERROR SYSTEM-->
                            <TabItem Style="{StaticResource custom_tabitem}">
                                <TabItem.Header>
                                    <Grid Height="30">
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Text="LOG ERROR" FontWeight="SemiBold"/>
                                    </Grid>
                                </TabItem.Header>

                                <ScrollViewer x:Name="_scrollViewer1" >
                                    <RichTextBox  Background="#FFFFFF" BorderThickness="0" IsReadOnly="True" Block.LineHeight="1" Padding="0,5,0,0">
                                        <FlowDocument PageHeight="180">
                                            <Paragraph>
                                                <Run Foreground="Black" FontWeight="Normal" Text="{Binding Path=LOGERROR, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                            </Paragraph>
                                        </FlowDocument>
                                    </RichTextBox>
                                </ScrollViewer>

                            </TabItem>


                        </TabControl>
                       
                    </Grid>

                    <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Transparent"/>

                    <StackPanel Grid.Column="2" Margin="20,35,20,0">
                        <Button Click="Button_Click" Content="{Binding Path=BUTTONCONTENT, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Height="90" FontSize="35" FontWeight="SemiBold" Background="#F4A460">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=BUTTONCONTENT}" Value="START">
                                            <Setter Property="IsEnabled" Value="True"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Path=BUTTONCONTENT}" Value="STOP">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <StackPanel Height="350">
                            <StackPanel x:Name="spBefore">
                                <Grid Margin="0,30,0,0">
                                    <Label Foreground="White" HorizontalAlignment="Left" Content="Calibrate Tần Số" FontSize="15" FontWeight="SemiBold"/>
                                    <Border Width="80" HorizontalAlignment="Right">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=CALIBFREQRESULT}" Value="NONE">
                                                        <Setter Property="Background" Value="#E0E0E0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=CALIBFREQRESULT}" Value="PASS">
                                                        <Setter Property="Background" Value="Lime"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=CALIBFREQRESULT}" Value="FAIL">
                                                        <Setter Property="Background" Value="Red"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=CALIBFREQRESULT}" Value="Wait">
                                                        <Setter Property="Background" Value="{StaticResource colorTextWait}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </Grid>
                                <Grid Margin="0,10,0,0">
                                    <Label Foreground="White" HorizontalAlignment="Left" Content="Calibrate Công Suất 2G" FontSize="15" FontWeight="SemiBold"/>
                                    <Border Width="80" HorizontalAlignment="Right">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=CALIBPW2GRESULT}" Value="NONE">
                                                        <Setter Property="Background" Value="#E0E0E0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=CALIBPW2GRESULT}" Value="PASS">
                                                        <Setter Property="Background" Value="Lime"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=CALIBPW2GRESULT}" Value="FAIL">
                                                        <Setter Property="Background" Value="Red"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=CALIBPW2GRESULT}" Value="Wait">
                                                        <Setter Property="Background" Value="{StaticResource colorTextWait}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </Grid>
                                <Grid Margin="0,10,0,0">
                                    <Label Foreground="White" HorizontalAlignment="Left" Content="Calibrate Công Suất 5G" FontSize="15" FontWeight="SemiBold"/>
                                    <Border Width="80" HorizontalAlignment="Right">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=CALIBPW5GRESULT}" Value="NONE">
                                                        <Setter Property="Background" Value="#E0E0E0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=CALIBPW5GRESULT}" Value="PASS">
                                                        <Setter Property="Background" Value="Lime"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=CALIBPW5GRESULT}" Value="FAIL">
                                                        <Setter Property="Background" Value="Red"/>
