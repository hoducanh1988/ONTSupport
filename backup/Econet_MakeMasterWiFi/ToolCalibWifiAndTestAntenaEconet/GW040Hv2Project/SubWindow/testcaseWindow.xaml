                        <TabItem>
                            <TabItem.Header>
                                <Grid Height="30">
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Text="Band 5GHz" FontWeight="SemiBold"/>
                                </Grid>
                            </TabItem.Header>

                            <DataGrid Margin="5" x:Name="dgrxBand50" 
