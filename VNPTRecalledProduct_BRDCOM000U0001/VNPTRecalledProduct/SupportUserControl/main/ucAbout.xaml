<UserControl x:Class="VNPTRecalledProduct.SupportUserControl.ucAbout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VNPTRecalledProduct.SupportUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer Margin="5,5,5,5">
        <StackPanel Margin="0,0,5,0">
            <Label FontSize="17" FontWeight="SemiBold" Content="Revision history"></Label>
            <DataGrid x:Name="GridAbout" Background="Transparent"
                          CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False"
                          CanUserResizeRows="False" CanUserSortColumns="False">
            </DataGrid>
            <Label></Label>
            <Label FontSize="17" FontWeight="SemiBold" Content="Software information"></Label>
            <Label></Label>
            <Label>Copyright of VNPT Technology 2020</Label>
            <Label>Software developed by the production support team members - HEC.</Label>
        </StackPanel>
    </ScrollViewer>


</UserControl>
